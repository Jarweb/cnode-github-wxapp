.page{
	display: flex;
	flex-direction: coloumn;
	flex-wrap: wrap;
	min-height: 100vh;
}
.tab-item{
	display:inline-block;
	padding:4rpx 20rpx;
	font-size:12px;
	color:#828282;
	border:1rpx solid #828282;
	margin-bottom:6px;
	margin-right:10px;
	border-radius:30px;
	text-align:center;
}
.tab-item-active{
	font-size: 12px;
	color: #ed7a5d;
	border:1rpx solid #ed7a5d;
}
.container{
	flex: 1;
}

.btn-stage{
	position:fixed;
	bottom:20rpx;
	left:0;
	right:0;
	display:inline-block;
	width:110rpx;
	height:34rpx;
	background-color: rgba(0,0,0,.6);
	text-align:center;
	color:#fff;
	padding:12rpx 20rpx;
	border-radius:40rpx;
	margin:0 auto;
	line-height:34rpx;
	font-size:12px;

}

.stage-pop-wrap{
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	width: 100%;
	height: 60px;
	padding:20rpx 20rpx;
	background-color: #fff;
	transition: all 0.15s ease-in-out;
	transform: translate3d(0, 100%, 0);
	z-index: 99;
}
.stage-pop-wrap.show{
	transform: translate3d(0, 0, 0);
}

.stage-mask{
	position: fixed;
	left: 0;
	right: 0;
	opacity: 0;
	background-color: rgba(0,0,0,.5);
	transition: all 0.15s ease-in-out;
	z-index: 98;
}
.stage-mask.show{
	top: 0;
	bottom: 0;
	opacity: 1;
}
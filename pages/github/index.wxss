.github-wrap{
	height: 100%;
}
.github-item{
	overflow: hidden;
	padding: 20rpx 20rpx 20rpx 0;
	border-bottom: 1rpx solid #f6f6f6;
}
.github-item-avatar{
	float: left;
	width: 60rpx;
	height: 60rpx;
	border-radius: 30rpx;
	padding: 14rpx 20rpx 0;
	overflow: hidden;
	vertical-align: middle;
}
.github-item-desc{
	overflow: hidden;
}
.github-item-title{
	display: block;
	font-size: 15px;
	color: #404040;
	padding-bottom: 16rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	-webkit-line-clamp: 1;
}
.github-item-content{
	display: block;
	font-size: 12px;
	padding-bottom: 12rpx;
	color: #404040;
	overflow: hidden;
}
.github-item-node{
	font-size: 12px;
	color: #828282;
}
.github-item-timeAt{
	float: right;
	font-size: 12px;
	color: #828282;
	padding-right: 10rpx;
}
.input-wrap{
	position: absolute;
	left: 50%;
	bottom: 40rpx;
	transform: translate3d(-50%,0,0);
	border:1rpx solid #828282;
	border-radius:20rpx;
	padding:8rpx 20rpx;
	overflow:hidden;
	width:60%;
}
input{
	font-size: 13px;
}
